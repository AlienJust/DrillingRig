<UserControl x:Class="DrillingRig.ConfigApp.RectifierTelemetry.RectifierTelemetriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:rectifierTelemetry="clr-namespace:DrillingRig.ConfigApp.RectifierTelemetry"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
			<ItemsControl ItemsSource="{Binding Path=RectifierTelemetryVms}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<rectifierTelemetry:RectifierTelemetryView/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Content="Читать циклически" Command="{Binding Path=ReadCycleCommand, Mode=OneTime}"/>
			<Button Grid.Column="1" Content="Остановка чтения" Command="{Binding Path=StopReadingCommand, Mode=OneTime}"/>
		</Grid>
	</Grid>
</UserControl>
