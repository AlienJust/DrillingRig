<UserControl
	x:Class="DrillingRig.ConfigApp.LookedLikeAbb.Parameters.ParameterComboEditable.ParameterComboEditableView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d"
	d:DesignHeight="25"
	d:DesignWidth="300">
	<CheckBox
		HorizontalContentAlignment="Stretch"
		VerticalContentAlignment="Stretch">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="3*" />
				<ColumnDefinition
					Width="1*" />
			</Grid.ColumnDefinitions>
			<TextBlock
				Grid.Column="0"
				Text="{Binding Name, Mode=OneTime}" VerticalAlignment="Center"/>
			<ComboBox
				Grid.Column="1"
				ItemsSource="{Binding Path=ComboItems, Mode=OneTime}"
				SelectedItem="{Binding Path=SelectedComboItem, Mode=TwoWay}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock
							Text="{Binding Path=ComboText, Mode=OneTime}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
		</Grid>
	</CheckBox>
</UserControl>
